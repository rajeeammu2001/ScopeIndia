        <div class="profile-label">Guardian Mobile:</div>
        <div class="profile-value">@Model.GuardianMobile</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Course:</div>
        <div class="profile-value">@Model.Course</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Training Mode:</div>
        <div class="profile-value">@Model.TrainingMode</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">SCOPE INDIA Location:</div>
        <div class="profile-value">@Model.ScopeLocation</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Preferred Timings:</div>
        <div class="profile-value">@Model.PreferredTimingsDb</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Address:</div>
        <div class="profile-value">@Model.Address</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Country:</div>
        <div class="profile-value">@Model.Country</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">State:</div>
        <div class="profile-value">@Model.State</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">City:</div>
        <div class="profile-value">@Model.City</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Pin/Zip Code:</div>
        <div class="profile-value">@Model.PinZipCode</div>
    </div>
</div>



