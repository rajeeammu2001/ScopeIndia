@model ScopeIndia.Models.Student
@{
    ViewBag.Title = "Student Profile";
}

<style>
    body {
        background-color: #000014;
        color: white;
        font-family: Arial, sans-serif;
    }

    .profile-container {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
        background-color: #1c1c1c;
        border: 2px solid yellow;
        border-radius: 10px;
    }

        .profile-container h2 {
            text-align: center;
            color: #FFC300;
            margin-bottom: 20px;
        }

    .profile-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
    }

    .profile-label {
        font-weight: bold;
        width: 40%;
        color: #FFC300;
    }

    .profile-value {
        width: 55%;
    }
</style>

<div class="profile-container">
