<h3>Picked Courses</h3>

@if (ViewBag.PickedCourses != null && ViewBag.PickedCourses.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                
                <th>Course Title</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var course in ViewBag.PickedCourses)
            {
                <tr>
                    
                    <td>@course.Title</td>
                    
                    <td>
                        <a asp-controller="Registration" asp-action="RemoveCourse" asp-route-courseId="@course.Id"
                           class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}
else
{
    <p>No course picked yet.</p>
}

<style>
    /*  font for table */
    table {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 14px; /* medium font size, sharp */
    }

        table th, table td {
            text-align: center;
            vertical-align: middle;
            padding: 10px; 
        }

        /* slightly bold header */
        table thead th {
            font-weight: 600;
        }

        /* improve contrast */
        table tbody tr td {
            color: antiquewhite;
            font-weight:bold;
        }
</style>


