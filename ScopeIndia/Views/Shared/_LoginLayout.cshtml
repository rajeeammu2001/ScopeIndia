@* _LoginLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScopeIndia</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #1A2041;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 25px;
                color: #1A2041;
                font-weight: bolder;
            }

        label {
            font-weight: bold;
            color: #1A2041;
        }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            margin-top: 5px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
        }

        .checkbox-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .checkbox-container input[type="checkbox"] {
                margin-right: 10px;
                width: auto;
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            background-color: #1A2041;
            border: none;
            border-radius: 6px;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

            .btn-login:hover {
                background-color: #2e3a73;
            }

        .links-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            font-size: 14px;
        }

            .links-row a {
                color: #1A2041;
                text-decoration: none;
            }

                .links-row a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
