@model ScopeIndia.Models.Course
@{
    ViewData["Title"] = @Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var syllabusItems = Model.Syllabus?.Split(',') ?? new string[0];
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: #071f3b;
        color: white;
        font-family: 'Segoe UI', sans-serif;
        overflow-x: hidden;
    }

    .hero {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        background: #071f3b;
        text-align: center;
        padding: 30px 10px;
    }

        .hero h2 {
            color: #FFC300;
            font-size: 28px;
            font-weight: bold;
        }

    .info-row {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding: 40px;
        flex-wrap: wrap;
        background: #071f3b;
    }

    .info-box {
        border: 2px solid #ffcc00;
        background: #000028;
        padding: 15px 25px;
        border-radius: 50px;
        color: white;
        font-weight: bold;
        text-align: center;
        min-width: 250px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.4);
    }

    .long-description {
        background: #0c0b0b;
        border: 2px solid #ffcc00;
        padding: 30px 20px;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        box-shadow: 2px 2px 10px #000;
        line-height: 1.7;
        font-size: 18px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .syllabus-grid {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 15px;
        padding: 30px 20px;
        background: #071f3b;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
    }

    .syllabus-item {
        border: 2px solid #ffcc00;
        padding: 12px 20px;
        border-radius: 10px;
        background: #111;
        color: white;
        font-weight: 600;
        font-size: 16px;
    }

    .action-buttons {
        text-align: center;
        margin: 40px 0 60px 0;
    }

    .btn-custom {
        background: linear-gradient(to right, #ddd, #aaa);
        padding: 15px 30px;
        margin: 15px;
        border-radius: 30px;
        font-weight: bold;
        color: black;
        border: none;
        text-decoration: none;
        display: inline-block;
        min-width: 200px;
        box-shadow: 2px 2px 5px #000;
    }

    .yellow-bar {
        background-color: #ffcc00;
        color: black;
        text-align: center;
        padding: 15px 10px;
        font-weight: bold;
        font-size: 20px;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        position: relative;
        margin-bottom: 20px;
    }

        .yellow-bar::after {
            content: "";
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: white;
            box-shadow: 0 2px 5px rgba(255,255,255,0.5);
        }

    @@media (max-width: 768px) {
        .info-box, .syllabus-item

    {
        min-width: 100%;
    }

    .syllabus-grid {
        grid-template-columns: 1fr;
    }

    }
</style>

<!-- Hero -->
<div class="hero">
    <h2>@Model.Title & Internship</h2>
</div>

<!-- Info Row -->
<div class="info-row">
    <div class="info-box">Duration: @Model.Duration</div>
    <div class="info-box">Timing: @Model.Timing</div>
    <div class="info-box">Next Batch: @Model.BatchDate</div>
</div>

<!-- Course Description -->
<div class="long-description">
    <p>@Model.LongDescription</p>
</div>

<!-- Syllabus Label -->
<div class="yellow-bar">Course Syllabus</div>

<!-- Syllabus Grid -->
<div class="syllabus-grid">
    @foreach (var topic in syllabusItems)
    {
        <div class="syllabus-item">@topic.Trim()</div>
    }
</div>

<!-- Buttons -->
<div class="action-buttons">
    <a href="https://scopeindia.org/contact.html" class="btn-custom">Talk to Us</a>
    <a href="@Url.Action("Index","Course")" class="btn-custom">Back to Courses</a>
</div>


